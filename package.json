{
  "name": "n8n-nodes-getscreenshot",
  "version": "1.0.1",
  "description": "n8n community node for GetScreenshot API - capture screenshots and PDFs of web pages",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "screenshot",
    "getscreenshot",
    "web capture",
    "pdf",
    "automation"
  ],
  "license": "MIT",
  "homepage": "https://getscreenshotapi.com",
  "author": {
    "name": "GetScreenshot",
    "email": "support@getscreenshotapi.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rasterwise/n8n-nodes-getscreenshot.git"
  },
  "engines": {
    "node": ">=18.10"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/GetScreenshotApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/GetScreenshot/GetScreenshot.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "n8n-workflow": "^1.70.0",
    "prettier": "^3.3.2",
    "typescript": "~5.5.2"
  },
  "peerDependencies": {
    "n8n-workflow": "^1.70.0"
  }
}
